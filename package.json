{
  "name": "neat-git",
  "displayName": "Neat Git",
  "description": "Advanced Git interface for VS Code inspired by JetBrains IDEs",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/surranov/neat-git"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "keywords": [
    "git",
    "version control",
    "scm",
    "jetbrains"
  ],
  "activationEvents": [
    "onCommand:neat-git.openCommitLog"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "neat-git.openCommitLog",
        "title": "Open Commit Log",
        "category": "Neat Git"
      },
      {
        "command": "neat-git.refresh",
        "title": "Refresh",
        "category": "Neat Git",
        "icon": "$(refresh)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "build": "npm run compile && vsce package --out builds/neat-git-v$(node -p \"require('./package.json').version\").vsix",
    "version:patch": "npm version patch --no-git-tag-version && npm run build",
    "version:minor": "npm version minor --no-git-tag-version && npm run build",
    "version:major": "npm version major --no-git-tag-version && npm run build",
    "release": "npm run build && git add . && git commit -m \"Bump version to $(node -p \"require('./package.json').version\")\" && git tag v$(node -p \"require('./package.json').version\") && git push && git push --tags",
    "compile-tests": "tsc -p . --outDir dist",
    "watch-tests": "tsc -p . -w --outDir dist",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "css-loader": "^6.7.2",
    "eslint": "^8.28.0",
    "html-webpack-plugin": "^5.5.0",
    "style-loader": "^3.3.1",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "vsce": "^2.15.0",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-virtualized-auto-sizer": "^1.0.20",
    "react-window": "^1.8.8"
  }
}
